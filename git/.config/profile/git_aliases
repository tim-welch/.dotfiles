# git aliases
git config --global alias.lol "log --pretty=format:"%h%d%x09%an%x09%ad%x09%s" --date=relative --graph --decorate"
git config --global alias.realclean "clean -xfd --exclude=.vagrant"
git config --global alias.hist "log --pretty=format:'%h %ad | %s%d [%an]' --graph --date=short"
git config --global alias.root "rev-parse --show-toplevel"
git config --global alias.bn "rev-parse --abbrev-ref HEAD"
git config --global alias.save "!git add -A && git commit -m 'wip: savepoint'"
git config --global alias.aliases "!git config --list --show-origin | grep alias"
git config --global alias.fixdate '!git commit --amend --no-edit --date "$(date)"'
git config --global alias.rmbranches '!git branch | xargs git branch -d'


